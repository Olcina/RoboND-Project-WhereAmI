<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <arg name="world" default="empty"/> 
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <!-- launch gazebo  -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find my_bot)/worlds/my_world.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>
  <!-- spawn robot -->

  <include file="$(find my_bot)/launch/my_robot.launch"/>  
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" 
        output="screen" args="-urdf -param robot_description -model my_bot"/>

  <!--launch rviz-->

  <node name="rviz" pkg="rviz" type="rviz" respawn="false" args="-d /home/olcina/Documents/RoboND/Project2/RoboND-Project-WhereAmI/catkin_ws/src/my_bot/my_bot.rviz"/>
</launch>
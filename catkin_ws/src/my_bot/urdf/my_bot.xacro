<?xml version='1.0'?>

<robot name="my_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- PARAMETERS -->
  <xacro:include filename="$(find my_bot)/urdf/my_bot.gazebo"/>

  <xacro:property name="bodyradius" value="0.25" />
  <xacro:property name="bodylength" value="0.2" />

  <!-- MACROS -->

  <!-- caster wheel macro -->
  <xacro:macro name="caster_wheel" params="name origin radius">
    <collision name='${name}_caster_collision'>
          <origin xyz="${origin}" rpy=" 0 0 0"/>
          <geometry>
            <sphere radius="${radius}"/>
          </geometry>
          <surface>
            <friction>
              <ode>
                <mu>0</mu>
                <mu2>0</mu2>
                <slip1>1.0</slip1>
                <slip2>1.0</slip2>
              </ode>
            </friction>
          </surface>
        </collision>

      <visual name='${name}_caster_visual'>
        <origin xyz="${origin}" rpy=" 0 0 0"/>
        <geometry>
          <sphere radius="${radius}"/>
        </geometry>
      </visual>

  </xacro:macro>
  <!-- MATERIALS -->
  <material name="blue">
       <color rgba="0 0 0.8 1"/>
     </material>
     <material name="black">
       <color rgba="0 0 0 1"/>
     </material>
     <material name="white">
       <color rgba="1 1 1 1"/>
     </material>

  <link name="robot_footprint"></link>
  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>
  

<!-- ROBOT STRUCTURE -->
  <link name='chassis'>
    <pose>0 0 0.15 0 0 0</pose>

    <inertial>
      <mass value="10.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <cylinder length="${bodylength}" radius="${bodyradius}"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <cylinder length="${bodylength}" radius="${bodyradius}"/>
      </geometry>
    </visual>
    
  <xacro:caster_wheel name="front" origin="0.15 0 -0.1" radius="0.049"/>
  <xacro:caster_wheel name="back"  origin="-0.15 0 -0.1" radius="0.049"/>

  </link>


  <link name="central_wheel">
      <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
      <mass value="5.0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    <visual name="central_wheel_visual">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
      <geometry>
        <sphere  radius="0.15" />
      </geometry>
      <material name="blue"/>
    </visual>
    <collision name="central_wheel_collision">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
      <geometry>
       <sphere  radius="0.15"/>
      </geometry>
    </collision>
  </link>

  <joint type="continuous" name="central_wheel_hinge">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <child link="central_wheel"/>
    <parent link="chassis"/>
    <axis xyz="1 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>




  <link name="camera">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <mass value="0.1"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    <visual name="">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
  </link>>


  <joint type="fixed" name="camera_joint">
    <origin xyz="0.25 0 0" rpy="0 0 0"/>
    <child link="camera"/>
    <parent link="chassis"/>
  </joint>

  <link name="hokuyo">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <mass value="0.1"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    <visual name="">
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <geometry>
      <mesh filename="package://udacity_bot/meshes/hokuyo.dae"/>
    </geometry>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="hokuyo_joint" type="fixed">
    <origin xyz="0.15 0.0 0.1" rpy="0.0 0.0 0.0"/>
    <parent link="chassis"/>
    <child link="hokuyo"/>
  </joint>


</robot>